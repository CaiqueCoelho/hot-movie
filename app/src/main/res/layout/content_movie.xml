<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        tools:context=".MovieActivity">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout
                android:paddingTop="@dimen/content_spacing"
                android:id="@+id/reviews_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"/>
        <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:weightSum="1"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:paddingStart="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/movie_release"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        tools:text="Release Date: January 9, 2019"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/movie_director"
                        tools:text="Director: Joko Anwar"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                    android:layout_height="150dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/movie_poster"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingEnd="@dimen/content_spacing"
                    android:paddingStart="0dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:contentDescription="@string/movie_poster"/>
        </LinearLayout>
        <TextView
                style="@style/AppTheme.Heading"
                android:text="@string/head_plot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/movie_plot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@sample/movie_plot"/>
        <TextView
                style="@style/AppTheme.Heading"
                android:text="@string/header_top_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <HorizontalScrollView
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:requiresFadingEdge="horizontal"
                android:fadingEdgeLength="@dimen/fading_edge_large"
                android:verticalScrollbarPosition="left"
                android:isScrollContainer="true"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:id="@+id/movie_actors"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </HorizontalScrollView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>