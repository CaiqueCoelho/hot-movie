<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        style="@style/AppTheme.NoActionBar"
        tools:context=".MovieActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:fitsSystemWindows="true"
            android:layout_height="@dimen/app_bar_height"
            android:layout_width="match_parent"
            app:elevation="0dp"
            android:background="@android:color/transparent"
            android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:toolbarId="@+id/toolbar"
                app:expandedTitleMarginBottom="104dp"
                app:expandedTitleMarginStart="@dimen/app_header_margin_start"
                app:collapsedTitleGravity="center_vertical|start"
                app:collapsedTitleTextAppearance="@android:style/android:TextAppearance.Material.Widget.Toolbar.Title"
                app:expandedTitleTextAppearance="@android:style/TextAppearance.Material.Headline"
                app:expandedTitleGravity="center_vertical|bottom"
                android:background="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary">
            <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax">
                <ImageView
                        android:id="@+id/movie_poster_hero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/movie_poster_hero"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:tint="@color/image_hero_filter_color"
                        tools:src="@tools:sample/avatars"/>
            </FrameLayout>
            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/movie_length"
                    android:gravity="top"
                    android:layout_gravity="bottom|start"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:layout_marginStart="@dimen/app_header_margin_start"
                    android:layout_marginBottom="76dp"
                    app:layout_collapseParallaxMultiplier="1.0"
                    app:layout_collapseMode="parallax"
                    android:textColor="@color/colorTitleSpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <HorizontalScrollView
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="@dimen/app_header_margin_start"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:requiresFadingEdge="horizontal"
                    android:fadingEdgeLength="@dimen/fading_edge_large"
                    app:layout_collapseParallaxMultiplier="1.0"
                    app:layout_collapseMode="parallax"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    android:verticalScrollbarPosition="left"
                    android:isScrollContainer="true"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/movie_genres"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </HorizontalScrollView>
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_movie"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
